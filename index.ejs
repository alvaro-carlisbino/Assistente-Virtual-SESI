    <style>
        body {
            margin: 0;
            padding-bottom: 3rem;
            background-color: #F5F5F5;
            font-family: Poppins, sans-serif;
        }

        #form {
            background: rgba(0, 0, 0, 0.15);
            padding: 0.25rem;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            height: 3rem;
            box-sizing: border-box;
            backdrop-filter: blur(10px);
            margin-top: 1rem;
        }

        #input {
            border: none;
            padding: 0 1rem;
            flex-grow: 1;
            border-radius: 2rem;
            margin: 0.25rem;
        }

        #input:focus {
            outline: none;
        }

        #form>button {
            border: none;
            padding: 0 1rem;
            margin: 0.25rem;
            border-radius: 3px;
            outline: none;
            color: #fff;
        }

        #chat-container {
            position: fixed;
            bottom: 3rem;
            left: 0;
            right: 0;
            top: 0;
            overflow-y: scroll;
            padding-bottom: 50px;
            margin-bottom: 3rem;
            margin-top: 20px;
        }

        .modal-backdrop {
            opacity: 0.5 !important;
            display: none;
        }

        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0;
            padding-top: 50px;
            padding-bottom: 100px;
        }

        #messages>li {
            padding: 0.5rem 1rem;
            margin: 15px;
        }

        #messages>li:nth-child(odd) {
            background: #efefef;
        }

        @media screen and (max-width: 767px) {
            #form {
                height: 5rem;
            }

            #input {
                font-size: 1.5rem;
                width: 80%;
                height: 3rem;
                margin: 0.5rem 0;
            }

            #form>button {
                font-size: 1.5rem;
                padding: 0.75rem 1rem;
                margin: 0.25rem;
                height: 3rem;
                width: 80%;
            }
        }

        .user {
            background-color: #D3AEF0;
            border-radius: 10px;
            padding: 10px;
            margin: 10px 0;
            max-width: 70%;
            align-self: flex-start;
            float: right;
            clear: both;
            color: "#FFF"
        }

        #voice-input {
            width: auto;
            height: auto;
        }

        .robot {
            background-color: #0229B06B;
            color: #fff;
            border-radius: 10px;
            padding: 10px;
            margin: 10px 0;
            max-width: 70%;
            align-self: flex-end;
            float: left;
            clear: both;
        }

        button {
            font-size: 1rem;
            padding: 8px 12px;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            border: none;
            width: 75%;
            max-width: 300px;
        }

        @media screen and (max-width: 480px) {

            button {
                font-size: auto;
                padding: 8px 12px;
                border-radius: 4px;
                background-color: #007bff;
                color: #fff;
                border: none;
                width: auto;
                max-width: 100px;
            }

            @media only screen and (max-width: 480px) {
                #voice-input {
                    display: none;
                }
            }
        }



        button {
            width: auto;
            height: auto;
        }

        .navbar {
